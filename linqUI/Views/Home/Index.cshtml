@model linqUI.Models.HomeIndexViewModel;

@{
    ViewData["Title"] = "MVC?";
    string item = "";
}

<div>
    <ol>
        @for (int i = 0; i< Model.Categories.Count; ++i)
        {
            if (i==0)
            {
                item = "active";
            }
            else
            {
                item = "";
            }
            <h4>@Model.Categories[i].CategoryName</h4>
        }
    </ol>

    <h3>Query products by price</h3>
    <form asp-action="ProductsMoreCost" method="get">
    <input name="price" placeholder="Enter a product price" />
    <input type="submit" />
</form>
    
    
</div>
